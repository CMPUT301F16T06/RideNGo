<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assignment1.ridengo.UserInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: (This field cannot be changed later)"
        android:id="@+id/UserNameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="61dp" />

    <EditText
        android:layout_width="2000dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_EnterUsername"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1"
        android:layout_below="@+id/UserNameTextView"
        android:layout_alignEnd="@+id/button_SignUpMain"
        android:layout_alignStart="@+id/UserNameTextView" />

    <EditText
        android:layout_width="2000dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_EnterEmail"
        android:inputType="textWebEmailAddress"
        android:maxLines="1"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/editText_EnterUsername"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="2000dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_EnterPhoneNum"
        android:inputType="phone"
        android:maxLength="14"
        android:maxLines="1"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/button_SignUpMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/textView2"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/editText_EnterUsername"
        android:layout_alignStart="@+id/editText_EnterUsername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:text="Vehicle Information"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/editText_EnterPhoneNum"
        android:layout_alignStart="@+id/editText_EnterPhoneNum" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Vehicle"
        android:id="@+id/button_add_vehicle"
        android:layout_alignBaseline="@+id/button_SignUpMain"
        android:layout_alignBottom="@+id/button_SignUpMain"
        android:layout_alignStart="@+id/UserNameTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Confirm  "
        android:id="@+id/button_SignUpMain"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:"
        android:id="@+id/textView3"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/editText_EnterEmail"
        android:layout_alignStart="@+id/editText_EnterEmail" />

    <TextView
        android:hint="No vehicle information\nPlease add vehicle if you want to be a driver"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vehicleInfoTextView"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />


</RelativeLayout>
