<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_vehicle_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assignment1.ridengo.UserVehicleInfoActivity">

    <TextView
        android:text="Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:id="@+id/YearTextView"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="19sp" />

    <TextView
        android:text="Model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ModelTextView"
        android:layout_alignBaseline="@+id/ModelEditText"
        android:layout_alignBottom="@+id/ModelEditText"
        android:layout_alignStart="@+id/MakeTextView"
        android:textSize="19sp"/>

    <TextView
        android:text="Make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MakeTextView"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/MakeEditText"
        android:layout_alignBottom="@+id/MakeEditText"
        android:layout_alignStart="@+id/YearTextView" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignStart="@+id/ModelEditText"
        android:id="@+id/ColorSpinner"
        android:entries="@array/vehicle_color"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Ford/Honda/VW..."
        android:ems="10"
        android:id="@+id/MakeEditText"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/YearSpinner"
        android:layout_toEndOf="@+id/ModelTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Fusion/Civic/Jetta..."
        android:ems="10"
        android:id="@+id/ModelEditText"
        android:layout_below="@+id/MakeEditText"
        android:layout_alignStart="@+id/PNumEditText"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="Plate#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:id="@+id/textView13"
        android:layout_alignBaseline="@+id/PNumEditText"
        android:layout_alignBottom="@+id/PNumEditText"
        android:layout_alignStart="@+id/textView12" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/PNumEditText"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/ColorSpinner"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:text="Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="19sp"
        android:layout_below="@+id/ModelEditText"
        android:layout_alignStart="@+id/ModelTextView"
        android:layout_marginTop="35dp" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/confirmButton" />

    <Button
        android:text=" Remove this Vehicle "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/confirmButton"
        android:layout_alignStart="@+id/textView13"
        android:id="@+id/RemoveButton"
        android:backgroundTint="#FF4500" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/YearSpinner"
        android:entries="@array/vehicle_year"
        android:layout_alignBottom="@+id/YearTextView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/YearTextView" />

</RelativeLayout>
