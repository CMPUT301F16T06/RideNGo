<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assignment1.ridengo.DriverMainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Search"
        android:ems="10"
        android:id="@+id/SearchTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SearchButton"
        android:layout_below="@+id/SearchTextView"
        android:layout_alignStart="@+id/FindNearbyButton"
        android:layout_alignEnd="@+id/FindNearbyButton" />

    <Button
        android:text="Find Nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FindNearbyButton"
        android:layout_below="@+id/SearchButton"
        android:layout_alignStart="@+id/ViewAcceptedButton"
        android:layout_alignEnd="@+id/ViewAcceptedButton" />

    <Button
        android:text="View Accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ViewAcceptedButton"
        android:layout_below="@+id/FindNearbyButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD FILTER"
        android:id="@+id/FilterButton"
        android:layout_below="@+id/ViewAcceptedButton"
        android:layout_alignStart="@+id/ViewAcceptedButton"
        android:layout_alignEnd="@+id/ViewAcceptedButton" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/FilterButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/DriverRequestListView" />


</RelativeLayout>
